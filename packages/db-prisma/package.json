{
  "name": "@opprs/db-prisma",
  "version": "2.5.0",
  "description": "Database backend for OPPR (Open Pinball Player Ranking System) using Prisma and PostgreSQL",
  "keywords": [
    "oppr",
    "pinball",
    "ranking",
    "database",
    "prisma",
    "postgresql",
    "tournament"
  ],
  "author": "Mitch McAffee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/themcaffee/OPPR",
    "directory": "packages/db-prisma"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "prisma",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:make-admin": "tsx scripts/make-admin.ts",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run build"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.11.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^22.10.5",
    "bcrypt": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@opprs/core": "workspace:^"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
