# Database connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://oppr:password@localhost:5432/oppr_db?schema=public"

# Example for local development
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/oppr_dev?schema=public"

# Example for production
# DATABASE_URL="postgresql://user:password@production-host:5432/oppr_production?schema=public"

# Optional: Seed admin user (development only)
# Set both to create an admin user during db:seed
SEED_ADMIN_EMAIL=
SEED_ADMIN_PASSWORD=

# Optional: Seed test user (development only)
# Set both to create a test user linked to a player during db:seed
SEED_TEST_EMAIL=
SEED_TEST_PASSWORD=
