{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/prisma/schema.prisma"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "package.json"],
      "outputs": ["dist/**", ".next/**", ".vite/**", "*.tsbuildinfo"]
    },
    "@opprs/db-prisma#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "prisma/**", "tsconfig.json", "package.json"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "@opprs/db-prisma#typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "prisma/**", "tsconfig.json", "package.json"],
      "cache": false
    },
    "rest-api#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "package.json"],
      "outputs": ["dist/**"],
      "cache": false
    },
    "rest-api#typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tsconfig.json", "package.json"],
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**", "vitest.config.ts", "tsconfig.json"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "inputs": ["src/**", "tests/**", "vitest.config.ts", "tsconfig.json"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tests/**", "*.ts", "*.tsx", "eslint.config.js", ".eslintrc*"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tests/**", "*.ts", "*.tsx", "eslint.config.js", ".eslintrc*"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tests/**", "*.ts", "*.tsx", "tsconfig.json"]
    },
    "format": {
      "inputs": ["src/**", "tests/**", "*.ts", "*.tsx", ".prettierrc"],
      "cache": false
    },
    "format:check": {
      "inputs": ["src/**", "tests/**", "*.ts", "*.tsx", ".prettierrc"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "inputs": ["docs/**"],
      "outputs": ["docs/.vitepress/dist/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["e2e/**", "playwright.config.ts", "src/**", "app/**", "components/**"],
      "outputs": ["playwright-report/**", "test-results/**"],
      "cache": false
    }
  }
}
